{
  "packages": {
    "caddy": {
      "version": "latest",
      "disable_plugin": true
    },
    "elmPackages.elm": "latest",
    "elmPackages.elm-format": "latest",
    "elmPackages.elm-test": "latest"
  },
  "shell": {
    "init_hook": [
      "alias f='elm-format src/ tests/ --yes'",
      "alias t=elm-test",
      "alias b='elm make src/Main.elm --debug --output public/app.js'",
      "alias s='caddy file-server --browse --listen :8000 --root public'"
    ]
  }
}
